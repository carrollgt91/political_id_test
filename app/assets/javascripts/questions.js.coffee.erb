$ ->

	answer = $('.response').attr("data-response-answer")
	if answer?
		console.log("response answer: " + answer)
		$("input#answer_" + answer).prop("checked",true)

	$("input:radio:checked").parent().addClass("highlight")

	$('.answer').click ->
		$(this).siblings().removeClass("highlight")
		$(this).addClass("highlight")
		$(this).children('input').prop('checked', true)
	$('.submit-answer').click ->
		$("form").submit()
		
